doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
    title Dashboard
  body
    div.container
      h1 Welcome, #{username}!

      <!-- Form to display user information -->
      form(action="/auth/user-info" method="POST")
        button(type="submit" class="btn btn-primary mt-3") View My Information
        
      <!-- Logout link -->
      a(href="/auth/logout" class="btn btn-danger mt-3") Logout